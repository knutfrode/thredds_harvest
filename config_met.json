            "url": "https://thredds.met.no/thredds/dodsC/cmems/topaz6/dataset-topaz6-arc-15min-3km-be.ncml",
            "stride": 8,
            "timestep": 2,
            "forecast_hours": 240},
         "mywavewam3": {
            "opt": ["-d rlat,0,1500 -d rlon,1300,2466", "-v projection_stere,rlon,rlat,VSDX,VSDY,VHM0,VTPK"],
